{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <div class="container">
            <div class="row">
                <!-- blog-contents -->
                <section class="col-md-10">

                    <div class="form-container">
                        {{ form_start(form, {action: "/books/new"}) }}
                            {% if not form.vars.valid %}
                                <div class="alert alert-danger" role="alert">
                                    <ul>
                                        {{ form_errors(form.book) }}
                                        {{ form_errors(form.book_title) }}
                                    </ul>
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <label for="exampleFormControlFile1">File</label>
                                {{ form_widget(form.book, {attr: {class: "form-control-file"}}) }}
                            </div>

                            <div class="form-group">
                                <label for="book_title">Title</label>
                                {{ form_widget(form.book_title, {attr: {class: "form-control", placeholder: "Enter a brief description of the file"}}) }}
                            </div>
                            <button type="submit" class="btn btn-primary">Upload</button>
                        {{ form_end(form) }}
                    </div>

                </section>
                <!-- end of blog-contents -->

            </div>
        </div> <!-- end of /.container -->
    </main>
{% endblock %}


